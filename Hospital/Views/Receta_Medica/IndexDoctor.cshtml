@model IEnumerable<Hospital.Models.Receta_Medica>

@{
    ViewData["Title"] = "IndexDoctor";
}

<h1>IndexDoctor</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Diagnostico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tratamiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especificaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cita)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnostico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tratamiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especificaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.Usuario.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicina.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cita.ID_Cita)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_Receta">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_Receta">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_Receta">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
